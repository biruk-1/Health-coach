{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-native",
    "baseUrl": ".",
    "paths": {
      "@hooks/*": ["app/hooks/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@context/*": ["app/context/*"],
      "@lib/*": ["app/lib/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
